{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "config": {
      "type": "object",
      "properties": {
        "locations": {
          "type": "object",
          "properties": {
            "storage": {
              "type": "string"
            },
            "binaries": {
              "type": "string"
            },
            "mans": {
              "type": "string"
            },
            "bash_completions": {
              "type": "string"
            },
            "zsh_completions": {
              "type": "string"
            },
            "fish_completions": {
              "type": "string"
            },
            "cache": {
              "type": "string"
            }
          }
        },
        "assets": {
          "type": "object",
          "properties": {
            "owner": {
              "type": "string"
            },
            "group": {
              "type": "string"
            },
            "mode": {
              "type": "string"
            }
          }
        }
      }
    },
    "groups": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "versions": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "string"
                },
                "current": {
                  "type": "boolean"
                }
              },
              "required": [
                "value",
                "current"
              ]
            },
            "contains": {
              "type": "object",
              "properties": {
                "current": {
                  "type": "boolean",
                  "const": true
                }
              }
            },
            "minContains": 1,
            "maxContains": 1
          },
          "remotes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "github",
                    "hashicorp",
                    "http"
                  ]
                },
                "owner": {
                  "type": "string"
                },
                "repo": {
                  "type": "string"
                },
                "tag": {
                  "type": "string"
                },
                "address": {
                  "type": "string"
                },
                "assets": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "binary",
                          "archive"
                        ]
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "location": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "type",
                      "id"
                    ]
                  }
                }
              },
              "required": [
                "type",
                "assets"
              ]
            }
          },
          "integrity": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "sha256",
                    "sha512"
                  ]
                },
                "asset": {
                  "type": "string"
                },
                "references": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "version": {
                        "type": "string"
                      },
                      "value": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "version",
                      "value"
                    ]
                  }
                }
              },
              "required": [
                "type",
                "asset",
                "references"
              ]
            }
          },
          "targets": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "asset": {
                  "type": "string"
                },
                "strip-components": {
                  "type": "integer"
                },
                "permsissions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "path": {
                        "type": "string"
                      },
                      "recursive": {
                        "type": "boolean"
                      },
                      "mode": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "path"
                    ]
                  }
                }
              },
              "required": [
                "asset"
              ]
            }
          },
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "target": {
                  "type": "string"
                },
                "regex": {
                  "type": "boolean"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "binary",
                    "man",
                    "bash_completion",
                    "zsh_completion",
                    "fish_completion"
                  ]
                },
                "name": {
                  "type": "string"
                }
              },
              "required": [
                "target",
                "name"
              ]
            }
          }
        },
        "required": [
          "name",
          "versions",
          "remotes",
          "links"
        ]
      }
    }
  }
}
